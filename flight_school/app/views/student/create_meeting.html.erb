<table style="float: left; top-margin: 10px">
	<tr>
		<th>Menu</th>
	</tr>
	<tr>
		<td>
			<div style="float: left; width: 175px">
				<%= link_to "View Progress", {:action => "show_progress", controller => "student"} %></br>
				<%= link_to "View Total Time", {:action => "time", controller => "student"} %></br>
				<%= link_to "Schedule a Meeting", {:action => "create_meeting", controller => "student"} %></br>
				<%= link_to "Schedule a Task", {:action => "create_request", controller => "student"} %></br>
				<%= link_to "View Tasks", {:action => "show_tasks", controller => "student"} %></br>
				<%= link_to "Log out", logout_path, method: :delete %></br>
				<%= link_to "Reset Password", {:action => "reset", controller => "users"} %>
			</div>
		</td>
	</tr>
</table>

<table style="float: left; margin-left: -23px;">
	<tr><th>Add a Meeting</th>
	</tr>
	<tr>
		<td>
			<div style="float: left; height: 105px;">
				<%= form_for(@meeting) do |f| %>
					Instructor:
					<%= @inst.name %>
					<div style="float: left; width 20px">
						Date
						<%= f.date_field :date %>
					</div>
					<div style="float: left; width 20px">
						Time
						<%= f.time_field :time %>
					</div>
			</div>
		</td>
	</tr>
</table>
<table style="position: absolute; margin-top: 190px; min-width: 497px;">
	<td>
		<div>
			Remarks
			<%= f.text_area :remarks, :rows => 5 %>
			<%= f.hidden_field :spid, :value => @student.id %>
			<%= f.hidden_field :ipid, :value => @inst.id %>	
			<div style="width: 400px; float: right;">
				<div style="width: 100px; float: right;">
					<%= f.submit "Add Meeting" %>
				</div>
			</div>	
		</div>
		<% end %>
	</td>
</table>