<table style="float: left; top-margin: 10px">
	<tr>
		<th>Menu</th>
	</tr>
	<tr>
		<td>
			<div style="float: left; width: 175px">
				<%= link_to "Add Instructor", {:action => "create_user", controller => "schooladmin" }%></br>
				<%= link_to "List Instructors", {:action => "show_instructors", controller => "schooladmin"} %></br>
				<%= link_to "Disable Instructors", {:action => "disable_instructors", controller => "schooladmin"} %></br>
				<%= link_to "List Disabled Instructors", {:action => "disabled_insts", controller => "schooladmin"} %></br>
