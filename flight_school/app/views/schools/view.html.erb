

<table style="width: 500px; float: left;">
	<tr><th>School Information</th>
	</tr>
	<tr>
		<td>
			<div >
			
				<div>
					FAA School ID:
					<%= @school.faa_id %></br>
					Name:
					<%= @school.name %>
				</div></br>
				<div>
					Address:
					<%= @school.line1 %></br>
					City:
					<%= @school.city %></br>
					State:
					<%= @school.state %></br>
					Zipcode:
					<%= @school.zip %>
				</div></br>
				<div>  
					Phone:
					<%= @school.phone %></br>
					Email:
					<%= @school.email %></br>
					Website:
					<%= @school.website %></br>
					Years in Business:
					<%= @school.years %>
				</div></br>
					
				<div>
					<b>Training Part(s):</b></br>
					141:
					<%= @school.tp141 ? 'Yes' : 'No' %></br>
