<table style="float: left; margin-left: -23px;">
<tr>
<th>Disable Schools</th></tr>
<tr><td>
<div style="min-height: 120px;">
<div style="float: center; width: 75px;">

  <% @schools.each do |s| %>
      <div style="width: 200px;"><div style="float: left; margin-left">
	  <%= s.name %></div><div style="float: left; margin-left: 5px;">
	  <%= form_for(s) do |f| %>
		<%= f.label :disable %></div><div style="float: left; margin-left: 5px;">
		<%= f.check_box :disable%></div><div style="float: left; margin-left: 5px;">
		<%= f.hidden_field :dis_date, :value => Date.today %></div><div style="float: left; margin-left: 5px;">
		<%= f.submit "Save" %></div></div>
	  <% end %>
  <% end %>
</br>
</div>
