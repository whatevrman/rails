<div class="container" ng-app="ComicBooks">
  <h1>Comics</h1>
  <div ng-controller="comicsController">
    <div class="well">
      <h3>Find Comics</h3>
      <form ng-submit="searchComic()">
        <div class="row">
          <div class="col-xs-6">
            <input type="text" ng-model="searchTerm" class="form-control" placeholder="Comic Title" />
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 text-center">
            <br />
            <input type="submit" value="Find Comic" class="btn btn-primary" />
            <a class="btn btn-danger" ng-click="emptyComics()">Clear Results</a>
          </div>
        </div>
      </form>
    </div>
    <h3>Results</h3>
    <hr />
    <table class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>Comic</th>
      </tr>
      </thead>
      <tbody>
      <tr ng-show="!comics.length">
        <td colspan="4">No comics in the results.</td>
      </tr>
      <tr ng-repeat="comic in comics">
        <td class="text-center"><img ng-src="{{comic.image_link}}">
          </br>{{comic.title}}</td>
      </tr>
      </tbody>
    </table>
  </div>
</div>